<UserControl x:Class="XmlTester.UIControls.RuleTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XmlTester.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="10" PreviewMouseWheel="ListViewScrollViewer_PreviewMouseWheel">
            <TreeView x:Name="docTreeViewer" SelectedItemChanged="Selected_Changed" Style="{StaticResource FESmallText}">
            <TreeView.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            </TreeView.Resources>
            </TreeView>
        </ScrollViewer>
</UserControl>
